<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticalActivity">

    <Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thống kê"
        android:fontFamily="@font/dosis_bold"
        android:textSize="30dp"
        android:textColor="@color/colorBlue"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Toolbar"
        />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >
            <TextView
                android:id="@+id/text_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlue"
                android:fontFamily="@font/dosis_bold"
                android:textSize="20dp"
                android:text="Hôm nay : 0"
                />
            <ImageView
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_height="220dp"
                android:layout_below="@+id/text_today"
                android:background="@drawable/image_statistical"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                app:cardCornerRadius="20dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    >
                    <TextView
                        android:id="@+id/text_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlue"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/dosis_bold"
                        android:textSize="20dp"
                        android:text="Tháng này : 0"
                        />
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="220dp"
                        android:layout_below="@+id/text_month"
                        android:background="@drawable/image_statistical"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                app:cardCornerRadius="20dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    >
                    <TextView
                        android:id="@+id/text_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlue"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/dosis_bold"
                        android:textSize="20dp"
                        android:text="Năm này : 0"
                        />
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="220dp"
                        android:layout_below="@+id/text_year"
                        android:background="@drawable/image_statistical"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>