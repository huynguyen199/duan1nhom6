<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/Rlt_dialog_manager_user"
        >
        <TextView
            android:id="@+id/updateUsers"
            style="@style/tv_dialog_manager_user"
            />

        <EditText
            android:id="@+id/edit_fullname"
            style="@style/edt1_dialog_manager_user"/>

        <EditText
            android:id="@+id/edit_idPhone"
            style="@style/edt2_dialog_manager_user" />

        <Spinner
            android:id="@+id/spinner_role"
            style="@style/spinner_dialog_manager_user"
            />


        <Button
            android:id="@+id/updateBtn"
            style="@style/btn_dialog_manager_user"
            />
    </RelativeLayout>
</RelativeLayout>