<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darker_gray"
        android:minHeight="?attr/actionBarSize"

        />

    <View
        android:layout_below="@id/toolbar"
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/darker_gray"
        />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/topView"
        android:layout_marginTop="-1dp"
        android:background="@drawable/wave" />

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="85dp"
        android:text="Đăng kí"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        />


    <EditText
        android:layout_below="@id/view5"
        android:padding="16dp"
        android:id="@+id/edUserHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:hint="@string/hoten"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_email"
        />
    <EditText
        android:layout_below="@id/edUserHoTen"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:hint="@string/email"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_lock"
        />
    <EditText
        android:layout_below="@+id/edEmail"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edSdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:hint="@string/sdt"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_lock"
        />
    <EditText
        android:layout_below="@+id/edSdt"
        android:padding="16dp"
        android:id="@+id/edMk"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:hint="@string/mk"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_lock"
        />
    <EditText
        android:layout_below="@+id/edMk"
        android:padding="16dp"
        android:id="@+id/ednhaplai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:layout_marginTop="10dp"
        android:hint="@string/nhaplai"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_lock"
        />
    <Button
        android:padding="8dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btnLogin"
       android:layout_below="@id/ednhaplai"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="@drawable/round_bg"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Đăng kí" />
    <TextView
        android:layout_below="@id/btnLogin"
        android:layout_width="match_parent"
        android:text="@string/style"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawablePadding="8dp"
        android:layout_height="wrap_content"/>




</RelativeLayout>